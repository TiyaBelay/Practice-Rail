<%= form_for @article do |f| %>
 
    <%# for handling errors use article.errors.any? %>
    <% if @article.errors.any? %>
        <div id="error_explanation">
            <h2>
                <%# pluralize is a rails helper that takes string and num args %>
                <%= pluralize(@article.errors.count, "error") %>
                prohibited this article from being saved:
            </h2>
            <ul>
                <%# for showing a list of errors %>
                <% @article.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <p>
        <%= f.label :title %><br>
        <%= f.text_field :title %>
    </p>

    <p>
        <%= f.label :text %><br>
        <%= f.text_area :text %>
    </p>
    <p>
        <%= f.submit %>
    </p>
<% end %>